{
  "info": {
    "_postman_id": "cancel-appointment-endpoint",
    "name": "Cancel Appointment Endpoint",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for the cancel appointment endpoint"
  },
  "item": [
    {
      "name": "Cancel Appointment",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"Emergency surgery required\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/appointments/:id/cancel",
          "host": ["{{base_url}}"],
          "path": ["api", "appointments", ":id", "cancel"],
          "variable": [
            {
              "id": "id",
              "value": "1",
              "description": "Appointment ID to cancel"
            }
          ]
        },
        "description": "Cancel an appointment and release the associated time slot."
      },
      "response": []
    }
  ],
 "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "id": "base_url",
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}